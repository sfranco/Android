	public double suma(double num1, double num2)
	{
		double suma=0;
		suma= num1+num2;
		return suma;
	}
	
	public double division(double num1, double num2)
	{
		double division=0;
		division=num1/num2;
		return division;
	}
	
	public double resta(double num1, double num2)
	{
		double resta=0;
		resta=num1-num2;
		return resta;
	}
	
	public double multi(double num1, double num2)
	{
		double multi=0;
		multi=num1*num2;
		return multi;
	}

